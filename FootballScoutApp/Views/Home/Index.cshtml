@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid position-relative" style="background-image: url('/images/template/img2.jpg'); background-size: cover; background-position: center; height: 350px;">
    <!-- Overlay -->
    <div style="background-color: rgba(52, 58, 64, 0.9); position: absolute; top: 0; left: 0; width: 100%; height: 100%;"></div>

    <!-- Content -->
    <div class="container text-center text-white position-relative" style="z-index: 2; padding-top: 150px;">
        <h1>Welcome to ScoutXchange</h1>
        <p class="lead">Your ultimate tool for scouting football talent.</p>
    </div>
</div>





<div class="container my-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card border-0 shadow h-100 text-center homepage-feature-card">
                <div class="card-body">
                    <i class="fas fa-futbol fa-3x mb-3 text-primary"></i>
                    <h3 class="card-title">Direct Player-Scout Connections</h3>
                    <p class="card-text">Facilitate direct communication between players and scouts, allowing scouts to discover talent firsthand and
                        players to showcase their skills to the right audience.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow h-100 text-center homepage-feature-card">
                <div class="card-body">
                    <i class="fas fa-users fa-3x mb-3 text-primary"></i>
                    <h3 class="card-title">
                        In-Depth Player Profiles
                    </h3>
                    <p class="card-text">
                        
                        Players can create detailed, verified profiles complete with stats, videos, 
                        and achievements, making it easier for scouts to find and assess potential signings.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow h-100 text-center homepage-feature-card">
                <div class="card-body">
                    <i class="fas fa-chart-line fa-3x mb-3 text-primary"></i>
                    <h3 class="card-title">Advanced Search and Filtering</h3>
                    <p class="card-text">Allows scouts to perform detailed searches and filter players based on specific criteria such as position, age and more,
                        ensuring they find the exact talent they need.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid bg-dark text-white py-5">
    <div class="container text-center">
        <h2>Why Choose Us?</h2>
        <p class="lead" style="padding:20px;">
            ScoutXchange is your gateway to a smarter, more efficient scouting experience.
            Whether you're a scout searching for the next big talent or a player looking to showcase your skills to the right audience, 
            our platform offers the tools and features you need to succeed. With direct connections, in-depth profiles, 
            and advanced search capabilities, ScoutXchange bridges the gap between talent and opportunity. 
            Join us and discover why so many in the football community trust ScoutXchange 
            to make their scouting and career advancement seamless and effective.</p>
    </div>
</div>

