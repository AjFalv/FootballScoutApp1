<div class="card bg-dark text-white mb-4 shadow-sm">
    <div class="card-body">
        <h2 class="card-title">Send Message</h2>
        <form asp-action="Send" method="post">
            <div class="form-group">
                <label for="receiverEmail">To:</label>
                <input type="email" class="form-control bg-light text-dark" id="receiverEmail" name="receiverEmail" required />
            </div>
            <div class="form-group">
                <label for="content">Message:</label>
                <textarea class="form-control bg-light text-dark" id="content" name="content" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Send</button>
        </form>
    </div>
</div>
