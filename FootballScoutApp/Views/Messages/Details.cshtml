<div class="card bg-dark text-white mb-4 shadow-sm">
    <div class="card-body">
        <h2 class="card-title">Message Details</h2>
        <div class="mb-3">
            <strong>From:</strong>
            <p>@Model.Sender.Email</p>
        </div>
        <div class="mb-3">
            <strong>Received:</strong>
            <p>@Model.Timestamp.ToString("yyyy-MM-dd HH:mm")</p>
        </div>
        <div class="mb-3">
            <strong>Message:</strong>
            <p>@Model.Content</p>
        </div>
        <a href="@Url.Action("Inbox")" class="btn btn-primary">Back to Inbox</a>
    </div>
</div>
