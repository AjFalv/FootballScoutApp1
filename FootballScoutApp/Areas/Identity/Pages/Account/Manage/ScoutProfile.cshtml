@page
@model FootballScoutApp.Areas.Identity.Pages.Account.Manage.ScoutProfileModel
@{
    ViewData["Title"] = "Scout Profile";
}

<h1>@ViewData["Title"]</h1>
<h4>Manage your scout profile information.</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Expertise"></label>
                <input asp-for="Input.Expertise" class="form-control" />
                <span asp-validation-for="Input.Expertise" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update Profile</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
